# AI-CHAT Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ============================================================================
# Model Configuration
# ============================================================================

# Chat Format 설정
# auto: GGUF 메타데이터의 tokenizer.chat_template 자동 사용 (권장)
# 강제 지정: llama-2, chatml, qwen, zephyr 등
CHAT_FORMAT=auto

# Model Path
# Example: ./models/ggml-model-Q4_K_M.gguf
MODEL_PATH=./models/your-model.gguf

# ============================================================================
# Document Processing
# ============================================================================

# Documents directory
DOCS_DIR=docs

# Data directory
DATA_DIR=data

# Incoming directory for new documents
INCOMING_DIR=incoming

# ============================================================================
# Logging
# ============================================================================

# Log directory
LOG_DIR=logs

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ============================================================================
# Alerts Configuration
# ============================================================================

# Dry-run mode for alerts (true = no actual sending)
ALERTS_DRY_RUN=true

# Slack webhook URL for alerts (optional)
# Example: https://hooks.slack.com/services/T00000000/B00000000/XXXXXXXXXXXXXXXXXXXX
SLACK_WEBHOOK_URL=

# ============================================================================
# Database Configuration
# ============================================================================

# SQLite database paths (usually don't need to change)
# METADATA_DB=metadata.db
# INDEX_DB=everything_index.db

# ============================================================================
# Server Configuration
# ============================================================================

# Backend API port
# API_PORT=7860

# Streamlit UI port
# UI_PORT=8501

# ============================================================================
# Feature Flags
# ============================================================================

# Enable/disable features
# ENABLE_AUTO_INDEXING=true
# ENABLE_CODE_SEARCH=true
# ENABLE_SUMMARIZATION=true

# ============================================================================
# Advanced Configuration
# ============================================================================

# RAG configuration
# TOP_K=5
# CHUNK_SIZE=1000
# CHUNK_OVERLAP=200

# Model parameters
# TEMPERATURE=0.7
# MAX_TOKENS=2048
# CONTEXT_LENGTH=4096

# ============================================================================
# Notes
# ============================================================================
# - Never commit .env to version control
# - Keep .env.sample updated with new variables
# - Use strong values for production deployments
# - See docs/OPERATIONS.md for more details
